
<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
	  <%= render 'shared/error_messages' %>





      <%= f.label :name %>
      <%= f.text_field :name %>

 

      <%= f.label :email %>
      <%= f.text_field :email %>
      
      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :phone, "Phone Number (XXX-XXX-XXXX)" %>
      <%= f.text_field :phone %>
 
 	<%= f.label :carrier, "Carriers "%>
		<%= f.select :carrier, { "AT&T"=> 'at&t', "Sprint"=>'sprint', "T-Mobile"=>'t-mobile', "Verizon"=>'verizon' }  %>
       
      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>